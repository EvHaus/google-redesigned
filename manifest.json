{
	"name": "Google Redesigned",
	"version": "4.1.0",
	"manifest_version": 2,
	"description": "A complete redesign of popular Google services, Google Redesigned changes the appearance of popular Google services.",
	"homepage_url": "http://www.globexdesigns.com/products/gr",
	"icons": {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png"
	},

	"applications": {
		"gecko": {
			"id": "{cc85cd4e-5a5b-4eda-a25c-bdaffa93b406}",
			"strict_min_version": "45.0"
		}
	},
	"background": {
		"scripts": ["js/background.js"]
	},
	"browser_action": {
		"default_icon": 	"img/icon-19.png",
		"default_popup": 	"popup.html",
		"default_title": 	"Google Redesigned"
	},
	"permissions": [
		"tabs",
		"*://*/*"
	]
}
